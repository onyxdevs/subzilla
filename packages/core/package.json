{
    "name": "@subzilla/core",
    "version": "1.0.0",
    "description": "Core subtitle processing functionality for Subzilla",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "tsc",
        "dev": "tsc --watch",
        "type-check": "tsc --noEmit",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint . --ext .ts --fix",
        "format": "prettier --write \"src/**/*.ts\"",
        "format:check": "prettier --check \"src/**/*.ts\"",
        "test": "echo \"No tests yet\""
    },
    "keywords": [
        "subtitle",
        "converter",
        "encoding",
        "utf8",
        "arabic"
    ],
    "author": {
        "name": "Obada Qawwas",
        "email": "info@onyxdev.net",
        "url": "https://onyxdev.net"
    },
    "license": "ISC",
    "dependencies": {
        "@subzilla/types": "workspace:*",
        "chardet": "^2.1.0",
        "cli-progress": "^3.12.0",
        "glob": "^11.0.3",
        "iconv-lite": "^0.7.0",
        "yaml": "^2.8.1"
    },
    "devDependencies": {
        "@types/chardet": "^1.0.0",
        "@types/cli-progress": "^3.11.6",
        "@types/glob": "^9.0.0",
        "@types/iconv-lite": "^0.0.1",
        "@types/node": "^24.3.0",
        "typescript": "^5.9.2"
    }
}
