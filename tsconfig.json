{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": ["ES2020"],
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "baseUrl": "./src",
        "paths": {
            "@subzilla/cli": ["./cli"],
            "@subzilla/cli/*": ["./cli/*"],
            "@subzilla/core": ["./core"],
            "@subzilla/core/*": ["./core/*"],
            "@subzilla/types": ["./types"],
            "@subzilla/types/*": ["./types/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "test"]
}
