# SubZilla Configuration File
# Common settings for subtitle conversion

input:
  encoding: auto
  format: auto
  defaultLanguage: en # TODO: Not used
  detectBOM: true # TODO: Not used

output:
  preserveStructure: false # Used for batch mode
  createBackup: false
  encoding: utf8
  bom: true
  lineEndings: crlf
  overwriteExisting: false

strip:
  html: true
  colors: true
  styles: true
  urls: false

batch:
  recursive: true
  parallel: true
  skipExisting: true
  chunkSize: 5
  retryCount: 3
  retryDelay: 1000
  failFast: false

performance:
  maxConcurrency: 4 # TODO: Not used
  bufferSize: 16384 # TODO: Not used
  useStreaming: true # TODO: Not used

# TODO: Not used
logging:
  level: info
  format: text
  colors: true
  timestamp: true

# TODO: Not used
error:
  exitOnError: true
  throwOnWarning: false
