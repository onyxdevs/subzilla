# Minimal SubZilla Configuration
# Only commonly used settings

input:
  encoding: auto
  format: auto

output:
  directory: ./converted
  createBackup: true
  overwriteBackup: true  # Overwrite existing backup files (clean management)
  format: srt

strip:
  html: true
  colors: true
  styles: true

batch:
  recursive: true
  parallel: true
  skipExisting: true
  chunkSize: 5
