# Performance-Optimized SubZilla Configuration
# Settings tuned for maximum performance

input:
  encoding: auto

output:
  directory: ./converted
  createBackup: false
  bom: false
  overwriteInput: true
  overwriteExisting: true

batch:
  recursive: true
  parallel: true
  skipExisting: false
  preserveStructure: false
  chunkSize: 20
  retryCount: 0
  failFast: true
