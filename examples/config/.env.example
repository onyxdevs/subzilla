# SubZilla Environment Variables
# Copy this file to .env and modify as needed

# Input Settings
SUBZILLA_INPUT_ENCODING=utf8
SUBZILLA_INPUT_FORMAT=srt
SUBZILLA_INPUT_DEFAULT_LANGUAGE=ar
SUBZILLA_INPUT_DETECT_BOM=true

# Output Settings
SUBZILLA_OUTPUT_DIRECTORY=./output
SUBZILLA_OUTPUT_PRESERVE_STRUCTURE=true
SUBZILLA_OUTPUT_CREATE_BACKUP=true
SUBZILLA_OUTPUT_FORMAT=srt
SUBZILLA_OUTPUT_BOM=false
SUBZILLA_OUTPUT_LINE_ENDINGS=lf

# Strip Options (use JSON for complex settings)
SUBZILLA_STRIP='{"html":true,"colors":true,"styles":true,"urls":true}'

# Batch Processing
SUBZILLA_BATCH_RECURSIVE=true
SUBZILLA_BATCH_PARALLEL=true
SUBZILLA_BATCH_SKIP_EXISTING=true
SUBZILLA_BATCH_MAX_DEPTH=3
SUBZILLA_BATCH_INCLUDE_DIRECTORIES='["movies","series"]'
SUBZILLA_BATCH_EXCLUDE_DIRECTORIES='["temp"]'
SUBZILLA_BATCH_CHUNK_SIZE=5
SUBZILLA_BATCH_RETRY_COUNT=3
SUBZILLA_BATCH_RETRY_DELAY=1000

# Performance Settings
SUBZILLA_PERFORMANCE_MAX_CONCURRENCY=4
SUBZILLA_PERFORMANCE_BUFFER_SIZE=16384
SUBZILLA_PERFORMANCE_USE_STREAMING=true
SUBZILLA_PERFORMANCE_MEMORY_LIMIT=512
SUBZILLA_PERFORMANCE_TIMEOUT=30000

# Logging Configuration
SUBZILLA_LOGGING_LEVEL=info
SUBZILLA_LOGGING_FILE=subzilla.log
SUBZILLA_LOGGING_FORMAT=text
SUBZILLA_LOGGING_COLORS=true
SUBZILLA_LOGGING_TIMESTAMP=true
SUBZILLA_LOGGING_MAX_FILES=5
SUBZILLA_LOGGING_MAX_SIZE=10485760

# Error Handling
SUBZILLA_ERROR_EXIT_ON_ERROR=true
SUBZILLA_ERROR_THROW_ON_WARNING=false
SUBZILLA_ERROR_IGNORE_ERRORS='["ENOENT","EEXIST"]'
SUBZILLA_ERROR_LOG_FILE=errors.log

# Hook Scripts
SUBZILLA_HOOKS_BEFORE_CONVERSION=./scripts/before.js
SUBZILLA_HOOKS_AFTER_CONVERSION=./scripts/after.js
SUBZILLA_HOOKS_ON_ERROR=./scripts/error.js
SUBZILLA_HOOKS_ON_SUCCESS=./scripts/success.js 